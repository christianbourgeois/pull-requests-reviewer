{
  "name": "Pull Requests View",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Remy Giard",
  "description": "Tool to navigate through the pull requests of a Github repository.",
  "icons": { "128": "images/icon.png" },
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/main.html"
  },
  "permissions": [ "https://api.github.com/*", "storage" ],
  "optional_permissions": [ "<all_urls>" ],
  "content_scripts": [{
      "matches": [ "http://github.com/*", "https://github.com/*" ],
      "css": [ "css/bootstrap.min.css", "css/bootstrap-theme.min.css", "css/sidebar.css" ],
      "js": ["js/main.js"]
  }],
  "web_accessible_resources": [ "js/*", "html/*", "css/*", "images/*", "fonts/*" ]
}
